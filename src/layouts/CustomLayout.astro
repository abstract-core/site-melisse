---
import Layout from "nebula-atoms/Layout";
import Navbar from "../components/Navbar.astro";
import { SINCE, SITE_TITLE } from "../consts";
import FooterSection from "../components/FooterSection.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  data: CollectionEntry<"pages">["data"];
}

const {
  data: { Name: title, Description: description, "Mots-clés": keywords },
} = Astro.props;
---

<Layout
  lang="fr"
  pageTitle={title}
  siteTitle={SITE_TITLE}
  description={description || undefined}
  keywords={keywords || undefined}
  noIndex={import.meta.env.NO_INDEX}
  since={SINCE}
  footerIcon={{
    alt: "Des motifs en pointillés",
    src: "/banniere.svg",
  }}
>
  <Navbar slot="navbar" />
  <div id="container">
    <slot />
  </div>
  <FooterSection slot="footer" />
</Layout>
